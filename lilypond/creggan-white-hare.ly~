% a little whitespace
\markup{ \column{ \vspace #1.0 } }


%% chords
creggan_chords = \new ChordNames {

  \chordmode {

    \set noChordSymbol = ""

    % As pedal tones (DADGAD):
    r4 \bar "||"
    g2. | g2./fs | g4./e g4./d | c2. | \break
    g2. | g2./fs | g2./e | d2. | d2. || \bar "||" \break
    e2.:m | e2.:m | e2.:m | g2.:5 | g2.:5 | \break
    g2. | g2./fs | g4./e g4./d | c2. | c2. | c2. | d2. || \bar "||" \break
%   b2.:m | c2. | e4.:m d4. | c2. | c2. | c2. | d2. || \bar "||" \break   % alt: gain harmonic movement at the expense of the lowest tonic pedal tone

%    % As regular chords, for our standard-tuned friends:
%    \set majorSevenSymbol = \markup{ maj7 }
%    r4 \bar "||"
%    g2. | g2.:maj7 | e4.:m d4. | c2. | \break
%    g2. | g2.:maj7 | e2.:m | d2. | d2. || \bar "||" \break
%    e2.:m | e2.:m | e2.:m | g2.:5 | g2.:5 | \break
%    g2. | g2.:maj7 | e4.:m d4. | c2. | c2. | c2. | d2. || \bar "||" \break

  } % end \chordmode

} % end \ChordNames



%% melody

creggan_melody = \new Voice {

  \relative d'' {

  \key g \major
  \time 3/4

  \partial 4 d8 d8

%  % a little syncopation
%  d4 d4 d4 | d4 b4 a4 | g4 a8 b8~ b4  | g2 e4 |
%  d4 e4 g4 | a4 b4 a4 | a4 g4 e8 d8~ | d4 r4 d'4 ||

  % skeletal rhythms
  d4 d4 d4 | d4 b4 a4 | g4 a4 b4 | g2 e4 |
  d4 e4 g4 | a4 b4 a4 | a4 g4 e4 | d2. | r2 d'4 ||
  e4 d4 e4 | e4 d4 e4 | e4 d4 b4 | d2. | r2 d4 ||
  e4 d4 d4 | d4 b4 a4 | g4. fs4. | e2.~ | e2. | r2. | r2. ||

  }  % end \relative

} % end Voice



%% lyrics
% first verse
creggan_verse_one = \new Lyrics {
  
  \lyricmode {
    
    In8 the8
    low-4 lands4 of4 | Creg-4 gan4 there4 | lives4 a4 white4 | hare2 As4 |
    swift4 as4 the4 | swal-4 low4 that4 | flies4 through4 the4 | air2. | ""2 You8 may8 ||
    tra'el4 the4 world4 | ov-4 er4 but4 | none4 to4 com-4 | pare2. | ""2 with8 the8 |
    pride4 of4 the4 | Creg-4 gan4 that4 | bonnie4. white4. | hare2. | ""2. | ""2. | ""2. ||
    
  } % end \lyricmode

} % end \Lyrics

% additional verses
creggan_verse_two = \markup {
  \italic{ Verse 2 }
  \wordwrap-string #"
  LYRICS GO HERE, DOUBLE-SPACED AT LINE BREAKS
  "
} % end \markup



%% MAIN
\score { %creggan = ""
  \new Staff {
    <<
      \creggan_chords
      \creggan_melody
      \creggan_verse_one
    >>
  } % end Staff
  \layout { indent = 0\cm }
} %end \score



