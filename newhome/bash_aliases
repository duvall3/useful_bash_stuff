# ~/.bash_aliases
# for user's aliases

alias cl='clear'
alias grepnc="grep --color=never"
alias shdown="sudo shutdown -P now"
alias df="df -hT"
alias du="du -h"
alias ping="ping -c 3"
alias bc="bc -l"
alias lc="wc -l"
alias pgrep="pgrep -l"
alias dpq="dpkg-query -l"
alias abr='avahi-browse -artf'
alias less='less -S'
alias lst="file * | grep text | awk -F : '{print \$1}'"
alias cdl='cd $(ls -dt1 */ | head -1)'


