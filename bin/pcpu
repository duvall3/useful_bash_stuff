# settings
COLORIZE_TF=${1:-true}
LOOP_TF=${2:-true}

# define main function
print_cpu_usage() {
  # calculate
  SUM=$(ps -eo pcpu | grep -Ev "[[:alpha:]]" | add_list.sh)
  CORES=$(lscpu | awk '$1 ~ /CPU\(s\):/ {print $2}')
  PCT=$(echo "$SUM / $CORES" | bc -l)
  # print
  if $COLORIZE_TF; then
    printf "\033[7mCPU: %2.2f %%\033[0m\n" $PCT
  else
    printf "CPU: %2.2f %%\n" $PCT
  fi
}

# main
if $LOOP_TF; then
  while true; do
    clear
    echo; echo
    print_cpu_usage
    sleep 1s
  done
else
  print_cpu_usage
fi

# all pau!   )
exit 0
