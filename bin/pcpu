# settings
COLORIZE=${1:-true}

# calculate
SUM=$(ps -eo pcpu | awk '$1 !~ /%/ {print}' | add_list.sh)
PCT=$(echo "$SUM / 8" | bc -l)

# print
if $COLORIZE; then
  printf "\033[7mCPU: %2.2f %%\033[0m\n" $PCT
else
  printf "CPU: %2.2f %%\n" $PCT
fi

# all pau!   )
exit 0
