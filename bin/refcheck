## INIT

# general
NULL=/dev/null
ERR=/dev/stderr

# control for aliases
ECHO="$(which echo) -e"
GREP="$(which grep) -E --color=auto"
PDFG=$(which pdfgrep)
if [ ! $PDFG ]; then $ECHO "The program 'pdfgrep' is required by this script." > $ERR; exit 3; fi
SORT=$(which sort)
UNIQ=$(which uniq)

# define usage
usage() {
  $ECHO "Usage: refcheck [-h|-p RANGE] <FILE>..."
  $ECHO "Scan a PDF for possible missing citations, assuming AIP-style formatting (i.e., citations appear as [1], [2], etc.)"
  $ECHO
  $ECHO "Options:"
  $ECHO "  -h\t\tShow this help message and exit"
  $ECHO "  -p RANGE\tSpecify a page range; e.g., '-p 2-5'"
  $ECHO
}

# process options
declare RANGE
while getopts "hp:" OPTIONS; do
  case $OPTIONS in
    h)
      usage
      exit 10
      ;;
    p)
      RANGE=$OPTARG
      ;;
    *)
      $ECHO
      usage
      exit 11
      ;;
  esac
done
shift $((OPTIND-1)) # uncomment for options with args


## MAIN

FILELIST=$@
if [ $RANGE ]; then
  PDFG+=" --page-range=$RANGE"
  shift
fi
REGEX="\[(\?|[^[:digit:]]*)\]"
$PDFG $REGEX ${FILELIST[*]} | $SORT -n | $UNIQ | $GREP $REGEX
EXIT_STATUS=$?


## EXIT

# all pau!   )
EXIT_STATUS=${EXIT_STATUS:-0}
exit $EXIT_STATUS

