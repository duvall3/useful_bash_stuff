#!/bin/bash
# thmake -- simple script to compile thesis

# viewing option
VIEW_TF=${1:-true}

# make clean, then make (repeatedly)
cd $THESIS_MAIN
if [[ $(pwd) =~ "THESIS/MAIN" ]]; then
  make clean
  make
  pdflatex main.tex
  pdflatex main.tex
else
  echo "ERROR: Non-\"THESIS/MAIN\" directory."
  exit 5
fi

# update symlink name in $HOME, or create one if not found
if [ -L ~/Duvall-Thesis-Draft_*.pdf ]; then
  OLD_LINKNAME=$(basename $(ls -tr1 ~/Duvall-Thesis-Draft_*.pdf | tail -1))
fi
NEW_LINKNAME="Duvall-Thesis-Draft_$(date +%m-%d-%y).pdf"
# check whether symlink has already been updated on this date
if [[ ! $OLD_LINKNAME == $NEW_LINKNAME ]]; then
  # update or create symlink
  if [ -L ~/$OLD_LINKNAME ]; then
    mv ~/$OLD_LINKNAME ~/$NEW_LINKNAME
  else
    ln -sf $(pwd)/main.pdf ~/$NEW_LINKNAME
  fi
fi

# view (optionally)
if $VIEW_TF; then
  evince main.pdf &
fi

# all pau!   )
exit 0
