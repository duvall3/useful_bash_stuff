## INIT

# general
INFILE=$1
OUTFILE=${INFILE%.md}.html
NULL=/dev/null
ERR=/dev/stderr

# control for aliases
ECHO="$(which echo 2> $NULL) -e"
BASENAME=$(which basename 2> $NULL)
PANDOC=$(which pandoc 2> $NULL)

# define usage
usage() {
  $ECHO "Usage: md2html [-h|OPTS] <FILE>"
  $ECHO "Convert a Markdown file to HTML"
  $ECHO
  $ECHO "Options:"
  $ECHO "  -h\tShow this help message and exit"
  $ECHO
}

# process options
while getopts "h" OPTIONS; do
  case $OPTIONS in
    h)
      usage > $ERR
      exit 10
      ;;
    *)
      $ECHO
      usage > $ERR
      exit 11
      ;;
  esac
done
# shift $((OPTIND-1)) # uncomment for options with args

# author's defaults
TITLE=$($BASENAME $INFILE .md)
TEMPLATE=github-darkdown
HSSTYLE=/usr/share/pandoc/data/templates/github-darkdown.theme
CSSSTYLE=/usr/share/pandoc/data/templates/github-darkdown-additional.css


## MAIN
$PANDOC -s --metadata pagetitle="$TITLE" --template=$TEMPLATE --highlight-style=$HSSTYLE -o $OUTFILE $CSSSTYLE $INFILE
EXIT_STATUS=$?


## EXIT

# all pau!   )
EXIT_STATUS=${EXIT_STATUS:-0}
exit $EXIT_STATUS

