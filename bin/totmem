##    MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
##    GNU General Public License for more details.
##
##    You should have received a copy of the GNU General Public License
##    along with this program.  If not, see <http://www.gnu.org/licenses/>.

# for host/user/alias portability
AWK=$(which awk); AWK=${AWK:-$(which gawk)}; AWK=${AWK:-$(which mawk)}
PGREP=$(which pgrep)
PASTE=$(which paste)
TR=$(which tr)
PS=$(which ps)
GREP=$(which grep)
SED=$(which sed)
BC=$(which bc)
CUT=$(which cut)

# process args
case $# in
  0)
    echo -e "USAGE: totmen [PGREOP_OPTION]... <PROCESSNAME|\"EXPRESSION\">"
    exit 2
    ;;
  1)
    if [[ $1 =~ -[Hh] ]]; then
      echo -e "USAGE: totmen [PGREOP_OPTION]... <PROCESSNAME|\"EXPRESSION\">"
      exit 0
    fi
    PATTERN=$1
    ;;
  2)
    OPTION=$1
    PATTERN=$2
    ;;
  *)
    OPTION=$(echo $@ | $AWK '{$NF=""; print $0}')
    PATSET=$(echo "PATTERN=\$$#")
    eval $PATSET
    ;;
esac

# MAIN
if $PGREP $PATTERN > /dev/null
  then echo "Memory usage of \$($PGREP $OPTION \"$PATTERN\"):"
  $PASTE -d " " <(echo "$(${PS} --no-headers -o rss $($PGREP $OPTION "$PATTERN") | $GREP -v "^$" | $TR "\n" "+" | $SED '$ s/.$/\n/' | $BC -l) / 1000" | $BC -l | $CUT -d . -f 1) <(echo " MB")
else
  echo -e "Memory usage of \$($PGREP $OPTION \"$PATTERN\"):\n0 MB"
fi

# all pau!   )
exit 0
