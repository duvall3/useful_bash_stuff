##    but WITHOUT ANY WARRANTY; without even the implied warranty of
##    MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
##    GNU General Public License for more details.
##
##    You should have received a copy of the GNU General Public License
##    along with this program.  If not, see <http://www.gnu.org/licenses/>.

# for host/user/alias portability
AWK=$(which awk); AWK=${AWK:-$(which gawk)}; AWK=${AWK:-$(which mawk)}
PGREP=$(which pgrep)
PASTE=$(which paste)
TR=$(which tr)
PS=$(which ps)
GREP=$(which grep)
SED=$(which sed)
BC=$(which bc)
CUT=$(which cut)
# FREE=$(which free)

# process args
case $# in
  0)
    echo -e "USAGE: totproc [PGREP_OPTION]... <PROCESSNAME|\"EXPRESSION\">"
    exit 2
    ;;
  1)
    if [[ $1 =~ -[Hh] ]]; then
      echo -e "USAGE: totproc [PGREP_OPTION]... <PROCESSNAME|\"EXPRESSION\">"
      exit 0
    fi
    PATTERN=$1
    ;;
  2)
    OPTION=$1
    PATTERN=$2
    ;;
  *)
    OPTION=$(echo $@ | $AWK '{$NF=""; print $0}')
    PATSET=$(echo "PATTERN=\$$#")
    eval $PATSET
    ;;
esac

# slightly prettier formatting
if [[ $OPTION = "" ]]; then
  PGSTR="$PGREP \"$PATTERN\""
else
  PGSTR="$PGREP $OPTION \"$PATTERN\""
fi

# MAIN
# PROCTOTAL=$($FREE --mega | $AWK 'NR==2 {print $2}')
if PID_LIST=$($PGREP -i $PATTERN) > /dev/null; then
  NUM_MATCHES=$(echo $PID_LIST | 'wc' -l)
  PROCPCT=$(${PS} -ho pcpu $PID_LIST | $TR "\n" "+" | $SED '$ s/.$/\n/' | $BC -l)
  printf "CPU usage of all %d processes matching \"%s\":\t%02.1f %%\n" $NUM_MATCHES $PATTERN $PROCPCT
else
  echo -e "No processes found matching \"$PATTERN\"."
fi

# all pau!   )
exit 0
