## INIT

# general
NULL=/dev/null
ERR=/dev/stderr

# control for aliases
ECHO="$(which echo) -e"

# define usage
usage() {
  $ECHO "Usage: pdf2grayscale [-h|-o OUTFILE] <FILE>"
  $ECHO "Convert a PDF to grayscale"
  $ECHO
  $ECHO "Options:"
  $ECHO "  -h\tShow this help message and exit"
  $ECHO
}

# process options
INFILE=$1
BASENAME=$('basename' $INFILE .pdf)
OUTFILE=${BASENAME}_grayscale.pdf
while getopts "ho" OPTIONS; do
  case $OPTIONS in
    h)
      usage
      exit 10
      ;;
    o)
      OUTFILE=$OPTARG
      ;;
    *)
      $ECHO
      usage
      exit 11
      ;;
  esac
done
shift $((OPTIND-1)) # uncomment for options with args


## MAIN

GS=$(which gs)
$GS \
  -sDEVICE=pdfwrite \
  -sProcessColorModel=DeviceGray \
  -sColorConversionStrategy=Gray \
  -dOverrideICC \
  -o $OUTFILE \
  -f $INFILE
EXIT_STATUS=$?


## EXIT

# all pau!   )
EXIT_STATUS=${EXIT_STATUS:-0}
exit $EXIT_STATUS

