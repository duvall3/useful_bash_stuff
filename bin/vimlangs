## INIT

# general
NULL=/dev/null
ERR=/dev/stderr

# control for aliases
ECHO="$(which echo) -e"

# define usage
usage() {
  $ECHO "Usage: vimlangs"
  $ECHO "Simple script to list (system-wide) language syntaxes availiable to Vim"
  $ECHO
  $ECHO "Options:"
  $ECHO "  -h\tShow this help message and exit"
  $ECHO
}

# process options
while getopts "h" OPTIONS; do
  case $OPTIONS in
    h)
      usage
      exit 10
      ;;
    *)
      $ECHO
      usage
      exit 11
      ;;
  esac
done
# shift $((OPTIND-1)) # uncomment for options with args


## MAIN

# path info
VIMRT=/usr/share/vim/vim81 ## FIXME : HC for now
VIMSYNDIR="$VIMRT"/syntax

# print list
awk '$2 ~ /Language:/ {split(FILENAME, FILEID, /\//);$1=""; $2=""; printf("%16s\t%s\n",FILEID[length(FILEID)],$0)}'  $VIMSYNDIR/*.vim


## EXIT

# all pau!   )
EXIT_STATUS=${EXIT_STATUS:-0}
exit $EXIT_STATUS

